@page "/partsInfo"
@using SVW_BYSJ_WEB
@using Blazui
@using Models
@using Data
@using Pages
@using SVW_BYSJ_WEB.Charts
@using SVW_BYSJ_WEB.Components

<BSTabGroup>
    <BSRow>
        <BSCol XS="9">
            <BSTabList IsList="true">
                <BSTab>
                    <BSTabLabel>备件查询</BSTabLabel>
                    <BSTabContent>
                        <PartInfoSearch />
                    </BSTabContent>
                </BSTab>
                <BSTab>
                    <BSTabLabel>备件信息概况</BSTabLabel>
                    <BSTabContent>
                        <PartInfoSummary/>
                    </BSTabContent>
                </BSTab>
            </BSTabList>
        </BSCol>
        <BSCol XS="3" class="text-right">
            <BSButton Color="Color.Success" @onclick="@(e => infoAddModal.Show())" Id="AddPartInfoButton">
                <span class="oi oi-plus" aria-hidden="true" />
            </BSButton>
            <BSTooltip Target="AddPartInfoButton" Placement="Placement.Top">新增备件基础信息</BSTooltip>
        </BSCol>
    </BSRow>
    
    <BSTabSelectedContent />
</BSTabGroup>

<PartInfoAdd @ref="infoAddModal"/>

@code {
    PartInfoAdd infoAddModal;
}
