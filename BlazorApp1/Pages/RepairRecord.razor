@page "/repairRecord"
@using SVW_BYSJ_WEB.Components



    <BSTabGroup>
        <BSRow>
            <BSCol XS="9">
                <BSTabList IsList="true">
                    <BSTab>
                        <BSTabLabel>待办维护</BSTabLabel>
                        <BSTabContent>
                            <RecordUnfinished />
                        </BSTabContent>
                    </BSTab>
                    <BSTab>
                        <BSTabLabel>历史经验</BSTabLabel>
                        <BSTabContent>
                            <RecordSummary />
                        </BSTabContent>
                    </BSTab>
                </BSTabList> 
            </BSCol>
            <BSCol XS="3" class="text-right">
                <BSButton Color="Color.Primary" @onclick="@(e => addRecordModal.Show())" Id="AddRepairRecordButton">
                    <span class="oi oi-plus" aria-hidden="true" />
                </BSButton>
                <BSTooltip Target="AddRepairRecordButton" Placement="Placement.Top">新增备件</BSTooltip>
                <BSButton Color="Color.Primary" @onclick="@(e => addRecordModal.Show())" Id="SearchRepairRecordButton">
                    <span class="oi oi-magnifying-glass" aria-hidden="true" />
                </BSButton>
                <BSTooltip Target="SearchRepairRecordButton" Placement="Placement.Top">查询备件</BSTooltip>
            </BSCol>
        </BSRow>       
        <BSTabSelectedContent />
    </BSTabGroup>
    <Part2Record @ref="addRecordModal"/>
@code {
    Part2Record addRecordModal;
}
