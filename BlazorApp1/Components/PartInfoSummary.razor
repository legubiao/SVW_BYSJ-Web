@using SVW_BYSJ_WEB.Charts
@using Data
    <BSCard CardType="CardType.Deck" style="margin-top:15px">
        <PieChart header="备件类型分布图" sourceData="partTypeData" Width="25" Height="30"/>
        <PieChart header="备件属性分布图" sourceData="partPropertyData" Width="25" Height="30"/>
        <PieChart header="备件状态分布图" sourceData="partStatusData" Width="25" Height="30"/>
