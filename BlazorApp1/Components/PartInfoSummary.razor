@code {
    Dictionary<string, int> partTypeData = SqlServerCtl.GetPartTypeIndex();
    Dictionary<string, int> partPropertyData = SqlServerCtl.GetPartPropertyIndex();
    Dictionary<string, int> partStatusData = SqlServerCtl.GetPartStatusIndex();
}
